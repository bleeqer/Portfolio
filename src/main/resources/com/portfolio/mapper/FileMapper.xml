<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.portfolio.mapper.FileMapper">

    <insert id="insert" parameterType="FileVO">
        INSERT INTO QUESTION_FILE (bno, name)
        VALUES (#{bno}, #{file})
    </insert>

    <delete id="delete" parameterType="FileVO">
        DELETE FROM QUESTION_FILE WHERE bno=#{bno}
    </delete>

    <select id="selectAll" parameterType="int" resultType="FileVO">
        SELECT * FROM QUESTION_FILE WHERE bno=#{bno}
    </select>

</mapper>
        -- file 테이블의 외래키로 사용될 ques_no를 반환받아 QuestionVO에 담김
        <selectKey keyProperty="ansNo" resultType="int" order="BEFORE">
            select ANS_SEQUENCE.NEXTVAL from dual
        </selectKey>

        INSERT INTO TB_ANSWER (ans_no, ques_no, content, writer)
        VALUES (#{ansNo}, #{quesNo}, #{content}, #{writer})
    </insert>


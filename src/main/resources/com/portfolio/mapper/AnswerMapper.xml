    <update id="update" parameterType="AnswerVO">
        UPDATE TB_ANSWER SET title = #{title},
                         content = #{content}
        WHERE ans_no=#{ansNo}
    </update>

    <delete id="delete" parameterType="int">
        DELETE FROM TB_ANSWER WHERE ans_no=#{ansNo}
    </delete>

    <insert id="addLike" parameterType="LikeVO">
        <selectKey keyProperty="likeNo" resultType="int" order="BEFORE">
            SELECT LIKE_SEQ.NEXTVAL FROM DUAL
        </selectKey>

        INSERT INTO TB_LIKE_REC (like_no, ans_no, user_email, like_type)
        VALUES (#{likeNo}, #{ansNo}, #{userEmail}, #{likeType})
    </insert>

    <delete id="deleteLike" parameterType="LikeVO">
        DELETE FROM TB_LIKE_REC WHERE ans_no=#{ansNo} AND user_email=#{userEmail}
    </delete>

    <select id="findLike" parameterType="LikeVO" resultMap="likeResultMap">
        SELECT * FROM TB_LIKE_REC WHERE ans_no=#{ansNo} AND user_email=#{userEmail}
    </select>

    <update id="updateLike" parameterType="LikeVO">
        UPDATE TB_LIKE_REC
        SET like_type=#{likeType}
        WHERE ans_no=#{ansNo} AND user_email=#{userEmail}
    </update>

    <select id="countLike" parameterType="LikeVO" resultMap="likeCountMap">
        SELECT NVL(SUM(CASE WHEN like_type = 'UP' THEN 1 ELSE 0 END), 0) likes,
               NVL(SUM(CASE WHEN like_type = 'DOWN' THEN 1 ELSE 0 END), 0) dislikes
        FROM tb_like_rec WHERE ans_no=#{ansNo}
    </select>

    <update id="updateCommentCnt" parameterType="int">
        UPDATE TB_ANSWER SET comment_cnt=comment_cnt + #{coCnt}
        WHERE ans_no=#{ansNo}
    </update>

    <resultMap id="AnswerResultMap" type="AnswerVO">
        <id column="ques_no" property="quesNo"/>
        <id column="ans_no" property="ansNo"/>
        <id column="answer" property="answer"/>
        <id column="reg_date" property="regDate"/>
        <id column="like_cnt" property="likeCnt"/>
        <id column="user_no" property="userNo"/>
        <id column="email" property="userEmail"/>
        <id column="name" property="userName"/>
        <id column="photo" property="userPhoto"/>
        <id column="occupation" property="userOccupation"/>
    </resultMap>

    <resultMap id="likeResultMap" type="LikeVO">
        <id column="ans_no" property="ansNo"/>
        <id column="user_email" property="userEmail"/>
        <id column="like_type" property="likeType"/>
    </resultMap>

    <resultMap id="likeCountMap" type="Hashmap">
        <id column="likes" property="likes" javaType="int"/>
        <id column="dislikes" property="dislikes" javaType="int"/>
    </resultMap>




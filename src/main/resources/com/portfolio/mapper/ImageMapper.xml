<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.portfolio.mapper.ImageMapper">

    <insert id="insert" parameterType="ImageVO">
        INSERT INTO TB_IMAGE (bno, uploadpath)
        VALUES (#{bno}, #{uploadPath})
    </insert>

    <delete id="delete" parameterType="ImageVO">
        DELETE FROM TB_IMAGE WHERE bno=#{bno}
    </delete>

    <select id="selectAll" parameterType="int" resultType="ImageVO">
        SELECT * FROM TB_IMAGE WHERE bno=#{bno}
    </select>

</mapper>